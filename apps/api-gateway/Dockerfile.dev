# Development Dockerfile with hot reload
FROM node:18-alpine

WORKDIR /app

# Install nodemon globally for hot reloading
RUN npm install -g nodemon

# Copy package files
COPY package*.json ./
COPY turbo.json ./
COPY apps/api-gateway/package*.json ./apps/api-gateway/
COPY packages/ ./packages/
COPY apps/api-gateway/prisma ./apps/api-gateway/prisma
COPY apps/api-gateway/.env ./apps/api-gateway/.env

RUN cd ./apps/api-gateway/ && npm install
# Install all dependencies (including dev dependencies)
RUN npm install

WORKDIR /app/apps/api-gateway
RUN npx prisma generate
# Go back to root
WORKDIR /app

EXPOSE 3000

# Use start:dev for hot reload - source code will be mounted as volume
CMD ["npm", "run", "start:dev", "--workspace=api-gateway"]
